# 🚀 Server Configuration
PORT=your_port_here # Example: 3000

# 🛢️ Database Configuration
HOST=your_host_here # Example: localhost
PORTDB=your_database_port # Example: 5432
USERNAMEDB=your_database_user # Example: postgres
PASSDB=your_database_password # Do not use real values here
DB=your_database_name # Example: demo_sql

# 🔐 Security Configuration
SALT_ROUNDS=a_number_here # Number of bcrypt rounds (10–12 recommended)
JWT_SECRET=your_jwt_secret_key_here  # Generate a secure key for JWT

# ✉️ SendGrid Configuration
SENDGRID_API_KEY=SG.xxxxxx_your_key_here_xxxxxx
EMAIL_FROM=yourverifiedemail@yourdomain.com

# 🌍 Environment Configuration
ENVIRONMENT=development
# If ENVIRONMENT is set to "development", more details will be shown in errors and logs, and queries will change format.
# Any other value (or if left empty) will be treated as production.